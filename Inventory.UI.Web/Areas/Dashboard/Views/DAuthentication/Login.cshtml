@model Inventory.Model.Partner
@{
    Layout = null;
}
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="~/Styles/bootstrap.min.css" type="text/css" media="all">
    <link rel="stylesheet" href="~/Styles/bootstrap-theme.min.css" type="text/css" media="all">
    <link rel="stylesheet" href="~/Styles/font-awesome.min.css" type="text/css" media="all">
    <link rel="stylesheet" href="~/Styles/common.css" type="text/css" media="all">
    <link rel="stylesheet" href="~/Styles/homepage.css" type="text/css" media="all">
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <div class="table-container">
                <div class="table-cell">
                    <section class="col-md-4 col-sm-8 col-md-pull-4 col-sm-pull-2 main-box" id="login">
                        <header>
                            <h1>ورود</h1>
                        </header>

                        <div class="clearfix"></div>
                        <article>
                            @using (Html.BeginForm("CheckAuthenticate", "DAuthentication"))
                            {
                                <div class="input-group">
                                    <span class="input-group-addon" id="email">ایمیل</span>
                                    <input type="text" name="email" class="form-control" placeholder="ایمیل" aria-describedby="x-addon">
                                </div>
                                <span class="text-danger" id="email-error"></span>

                                <div class="input-group">
                                    <span class="input-group-addon" id="password">رمز عبور</span>
                                    <input type="password" minlength="8" maxlength="20" name="password" class="form-control" placeholder="رمز عبور" aria-describedby="x-addon">
                                </div>
                                <span class="text-danger" id="password-error"></span>

                                <button type="submit" class="btn btn-parkmark" id="login-submit">ورود</button>
                            }
                        </article>
                        <footer>
                        </footer>
                    </section>
                </div>
            </div>
            @if (@Model != null)
            {
                <div>@Model.EndUserMessage</div><br />
            }
        </div>
    </div>

    <script type="text/javascript" src="js/script.js"></script>
</body>
</html>