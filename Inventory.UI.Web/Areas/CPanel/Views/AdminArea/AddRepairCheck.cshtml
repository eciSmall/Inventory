                <div class="clearfix"></div>
            </section>
            <section class="col-md-8 col-sm-8 col-md-pull-4 col-sm-pull-4" id="content-section">
                <h1>اضافه کردن گزارش تعمیر</h1>
                <br>
                @using (Html.BeginForm("AddRepairCheck", "AdminArea"))
    {
            <section class="col-md-4 ">
                <div class="input-group">
                    <span class="input-group-addon" id="SugesstionPrice"> @Html.DisplayNameFor(m => m.RepairCheckModel.SugesstionPrice) </span>
                    <input type="number" name=SugesstionPrice class="form-control" aria-describedby="SugesstionPrice" required>
                </div>
            </section>

            <section class="col-md-4 ">
                <div class="input-group">
                    <span class="input-group-addon" id="VisitDate"> @Html.DisplayNameFor(m => m.RepairCheckModel.VisitDate) </span>
                    <input type="text" name=VisitDate class="form-control" aria-describedby="VisitDate" required>
                </div>
            </section>
            <section class="col-md-4 ">
                <div class="input-group">
                    <span class="input-group-addon" id="NeedRepair"> @Html.DisplayNameFor(m => m.RepairCheckModel.NeedRepair) </span>
                    <input type="checkbox" name="NeedRepair" value="true" class="form-control" aria-describedby="NeedRepair"><br>
                </div>
            </section>
            @Html.DropDownList("InventoryRefId", new SelectList(Model.InventoriesList, "InventoryId", "Name"), htmlAttributes: new { @class = "input-group-addon" })
            <button type="submit" class="btn btn-parkmark">افزودن</button>
}
                @if (Model != null)
    {
        if (Model.RepairUnit != null)
        {
            if (Model.RepairUnit.EndUserMessage != null)
            {
                <div class="clearfix"></div>
                <div class="text-center text-success">@Model.RepairUnit.EndUserMessage</div>
}
}
}

            </section>
            <!--End of main section-->


        </div>
    </div>

    <script type="text/javascript" src="js/jquery-3.2.1.js"></script>
    <script type="text/javascript" src="js/bootstrap.min.js"></script>
</body>
</html>
